{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "resolveJsonModule": true,
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "dist",
    "types": ["node"],
    "strictNullChecks": true,
    "esModuleInterop": true
  },
  "include": [
    "**/src/**/*"
  ],
  "exclude": [
    "node_modules", 
    "**/src/**/*.spec.ts", 
    "dist"
  ]
}
